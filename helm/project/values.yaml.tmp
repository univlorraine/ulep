# Default values for etandem.
# This is a YAML-formatted file.
# Declare variables to be passed into your templates.

############## GLOBAL ##############

name: "etandem"
postgresDB: postgres
postgresUser: postgres
postgresPassword: 
domain:

############## API ##############
api:
  name: api
  replicaCount: 1

  image:
    repository: yatsukino/test-api
    tag: amd
    pullPolicy: Always

  env:
    keycloakBaseUrl: auth
    keycloackRealm: etandem
    keycloackAdmin: admin
    keycloackAdminPassword: 
    keycloackClientId: api
    keycloackClientSecret: 
    minioUrl: minio
    minioAccessKey: "minio"
    minioSecretKey: 

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 443

  ingress:
    enabled: true
    className: ""
    annotations: 
      cert-manager.io/issuer: letsencrypt
      kubernetes.io/ingress.class: nginx
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: api
        paths: [/]
    # tls:
    #   - secretName: etendem-tls
    #     hosts:
    #       - api
############## API ##############

############## AUTH ##############
auth:
  name: "auth"
  replicaCount: 1

  image:
    repository: "quay.io/keycloak/keycloak"
    tag: "21.1"
    pullPolicy: IfNotPresent

  env:
    keycloackAdmin: admin
    keycloackAdminPassword: 
    kcDB: postgres
    kcDBSchema: keycloak
    keycloakHostname: auth
    proxyAddressForwarding: true

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 443

  ingress:
    enabled: true
    className: ""
    annotations: 
      cert-manager.io/issuer: letsencrypt
      kubernetes.io/ingress.class: nginx
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: auth
        paths: [/]
    # tls: 
    #   - secretName: etendem-tls
    #     hosts:
    #       - auth
############## AUTH ##############

############## DATABASE ##############
database:
  name: "database"
  replicaCount: 1

  image:
    repository: "postgres"
    tag: "15.3-alpine"
    pullPolicy: IfNotPresent

  env: {}

  pv:
    storage: 10Gi
    volumeMode: Filesystem
    storageClassName: scw-bssd
    csi:
      enabled: true
      driver: csi.scaleway.com
      volumeHandle: fr-par-2/6922c455-e37d-40c4-8e6c-9fb3613e89a0
      key: topology.csi.scaleway.com/zone
      zone: fr-par-2

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 5432

  ingress:
    enabled: false
    # className: ""
    annotations: 
      cert-manager.io/issuer: letsencrypt
      kubernetes.io/ingress.class: nginx
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: database
        paths: [/]
    # tls: 
    #   - secretName: etendem-tls
    #     hosts:
    #       - database
############## DATABASE ##############

############## MINIO ##############
minio:
  name: "minio"
  replicaCount: 1

  image:
    repository: "minio/minio"
    tag: "RELEASE.2023-06-02T23-17-26Z.fips"
    pullPolicy: IfNotPresent

  env:
    minioRootUser: minio
    minioRootPassword: 

  pv:
    storage: 40Gi
    volumeMode: Filesystem
    storageClassName: scw-bssd
    csi:
      enabled: true
      zone: fr-par-2

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 80

  ingress:
    enabled: true
    className: ""
    annotations:
      cert-manager.io/issuer: letsencrypt
      kubernetes.io/ingress.class: nginx
      kubernetes.io/tls-acme: "true"
      kubernetes.io/ingress.allow-http: "true"
      kubernetes.io/ingress.global-static-ip-name: ""
      nginx.ingress.kubernetes.io/secure-backends: "true"
      nginx.ingress.kubernetes.io/backend-protocol: "HTTPS"
      nginx.ingress.kubernetes.io/whitelist-source-range: 0.0.0.0/0

    hosts:
      - host: minio
        paths: [/]
    # tls: 
    #   - secretName: etendem-tls
    #     hosts:
    #       - minio
############## MINIO ##############

############## INIT SPEC ##############

serviceAccount:
  # Specifies whether a service account should be created
  create: true
  # Annotations to add to the service account
  annotations: {}
  # The name of the service account to use.
  # If not set and create is true, a name is generated using the fullname template
  name: ""

imagePullSecrets: []
nameOverride: ""
fullnameOverride: ""

podAnnotations: {}

podSecurityContext: {}
  # fsGroup: 2000

securityContext: {}
  # capabilities:
  #   drop:
  #   - ALL
  # readOnlyRootFilesystem: true
  # runAsNonRoot: true
  # runAsUser: 1000


resources: {}

nodeSelector: {}

tolerations: []

affinity: {}
