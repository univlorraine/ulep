# Default values for etandem.
# This is a YAML-formatted file.
# Declare variables to be passed into your templates.

############## GLOBAL ##############

name: "ulep" # REQUIRED
domain: exemple.com # REQUIRED 
issuerName: letsencrypt # REQUIRED 
global:
  postgresql: 
    auth:
      username: postgres # FIXE
      database: postgres # FIXE
      password: "" # REQUIRED
      postgresPassword: "" # REQUIRED

postgresql:
  primary:
    initdb: 
      scriptsConfigMap: init-database # REQUIRED

############## API ##############
api:
  name: api # REQUIRED
  replicaCount: 1 # OPTIONNEL

  image:
    repository: "rg.fr-par.scw.cloud/ulep/api-dev" # REQUIRED
    tag: "latest" # REQUIRED
    pullPolicy: Always # OPTIONNEL

  env:
    adminUrl: admin # FIXE 
    keycloakBaseUrl: auth # FIXE
    keycloakRealm: etandem # FIXE
    keycloakAdmin: admin # REQUIRED
    keycloakAdminPassword: AZE123aze # REQUIRED
    keycloakClientId: api # FIXE
    keycloakClientSecret: "" # REQUIRED 
    minioUrl: minio # FIXE
    minioAccessKey: "minio" # FIXE
    minioSecretKey: AZE123aze # REQUIRED

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 80

  ingress:
    enabled: true
    className: traefik
    annotations: 
      kubernetes.io/ingress.class: "traefik"
      cert-manager.io/cluster-issuer: "letsencrypt"
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: api
        paths: [/]
    tls:
      - hosts:
          - api
############## API ##############

############## AUTH ##############
auth:
  name: auth # REQUIRED
  replicaCount: 1

  image:
    repository: "quay.io/keycloak/keycloak" # REQUIRED
    tag: "21.1" # REQUIRED
    pullPolicy: IfNotPresent

  env:
    keycloakAdmin: admin # FIXE
    keycloakAdminPassword: "" # REQUIRED
    kcDB: postgres # FIXE
    kcDBSchema: keycloak # FIXE
    keycloakHostname: auth # FIXE
    proxyAddressForwarding: true 

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 80

  ingress:
    enabled: true
    className: traefik
    annotations: 
      kubernetes.io/ingress.class: "traefik"
      cert-manager.io/cluster-issuer: "letsencrypt"
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: auth
        paths: [/]
    tls: 
      - hosts:
          - auth
############## AUTH ##############

############## MINIO ##############
minio:
  name: minio # FIXE
  replicaCount: 1

  image:
    repository: "minio/minio" # REQUIRED
    tag: "RELEASE.2023-06-02T23-17-26Z.fips" # REQUIRED
    pullPolicy: IfNotPresent

  env:
    minioRootUser: minio # FIXE
    minioRootPassword: AZE123aze # REQUIRED

  pv:
