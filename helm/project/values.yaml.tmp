# Default values for etandem.
# This is a YAML-formatted file.
# Declare variables to be passed into your templates.

############## GLOBAL ##############

name: "etandem"
postgresDB: postgres
postgresUser: postgres
postgresPassword: ""
domain: ""

############## API ##############
api:
  name: "api"
  replicaCount: 1

  image:
    repository: etandem-api
    tag: latest
    pullPolicy: IfNotPresent

  env:
    keycloakBaseUrl: auth
    keycloackRealm: etandem
    keycloackAdmin: admin
    keycloackAdminPassword: ""
    keycloackClientId: api
    keycloackClientSecret: 
    minioUrl: minio
    minioAccessKey: "minio"
    minioSecretKey: ""

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 443

  ingress:
    enabled: true
    className: ""
    annotations: 
      kubernetes.io/ingress.class: nginx
      kubernetes.io/tls-acme: "true"
      cert-manager.io/issuer: "letsencrypt"
    hosts:
      - host: api
        paths: [/]
    tls:
      - secretName: etendem-tls
        hosts:
          - api
############## API ##############

############## AUTH ##############
auth:
  name: "auth"
  replicaCount: 1

  image:
    repository: "quay.io/keycloak/keycloak"
    tag: "21.1"
    pullPolicy: IfNotPresent

  env:
    keycloackAdmin: admin
    keycloackAdminPassword: ""
    kcDB: postgres
    kcDBSchema: keycloak

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 8080

  ingress:
    enabled: false
    # className: ""
    annotations: {}
      # kubernetes.io/ingress.class: nginx
      # kubernetes.io/tls-acme: "true"
    hosts:
      - host: auth
        paths: [/]
    tls: 
      - secretName: etendem-tls
        hosts:
          - auth
############## AUTH ##############

############## DATABASE ##############
database:
  name: "database"
  replicaCount: 1

  image:
    repository: "postgres"
    tag: "15.3-alpine"
    pullPolicy: IfNotPresent

  env: {}

  pv:
    storage: 5Gi
    volumeMode: Filesystem
    storageClassName: scw-bssd

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 5432

  ingress:
    enabled: false
    # className: ""
    annotations: 
      kubernetes.io/ingress.class: nginx
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: database
        paths: [/]
    # tls: 
    #   - secretName: etendem-tls
    #     hosts:
    #       - database
############## DATABASE ##############

############## MINIO ##############
minio:
  name: "minio"
  replicaCount: 1

  image:
    repository: "minio/minio"
    tag: "RELEASE.2023-06-02T23-17-26Z.fips"
    pullPolicy: IfNotPresent

  env:
    minioRootUser: minio
    minioRootPassword: ""

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 443

  ingress:
    enabled: true
    # className: ""
    annotations:
      kubernetes.io/ingress.class: nginx
      kubernetes.io/tls-acme: "true"
      cert-manager.io/issuer: "letsencrypt"
    hosts:
      - host: minio
        paths: [/]
    tls: 
      - secretName: etendem-tls
        hosts:
          - minio
############## MINIO ##############

