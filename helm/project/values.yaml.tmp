# Default values for etandem.
# This is a YAML-formatted file.
# Declare variables to be passed into your templates.

############## GLOBAL ##############

name: "ulep" # REQUIRED
domain: exemple.com # REQUIRED
issuerName: letsencrypt # REQUIRED

global:
  postgresql:
    auth:
      username: postgres # FIXE
      database: ulep # FIXE
      password: "" # REQUIRED

apiUrl: &apiUrl api
adminUrl: &adminUrl admin
minioUrl: &minioUrl minio
minioApiUrl: &minioApiUrl minio-api
keycloakUrl: &keycloakUrl auth
webappUrl: &webappUrl webapp

############## POSTGRES ##############
postgresql:
  primary:
    initdb:
      scriptsConfigMap: ulep-init-database # REQUIRED
  persistence:
    size: 8Gi # REQUIRED
############## POSTGRES ##############

############## API ##############
api:
  name: api # REQUIRED
  replicaCount: 1 # OPTIONNEL

  image:
    repository: "rg.fr-par.scw.cloud/ulep/api-prod" # REQUIRED
    tag: "latest" # REQUIRED
    pullPolicy: Always # OPTIONNEL
  initImage:
    repository: rg.fr-par.scw.cloud/ulep/api-init # REQUIRED
    tag: 'v1'  # REQUIRED
    pullPolicy: IfNotPresent # OPTIONNEL

  env:
    keycloakRealm: etandem # FIXE
    keycloakAdmin: admin # REQUIRED
    keycloakAdminPassword: &keycloakAdminPassword AZE123aze # REQUIRED
    keycloakClientId: api # FIXE
    keycloakAdminGroupId: 02736a0f-4679-4329-a877-2ce87aaea569 # FIXE
    keycloakClientSecret: &keycloakClientSecret "" # REQUIRED
    minioAccessKey: &minioAccessKey minio # FIXE
    minioSecretKey: &minioSecretKey AZE123aze # REQUIRED
    smtpHost: localhost # REQUIRED
    smtpPort: 25 # REQUIRED
    smtpSecure: true # REQUIRED
    ignoreTLS: false # REQUIRED
    smtpSender: tandems@ulep.fr # REQUIRED
    smtpDisableBootVerification: false # REQUIRED
    logLevel: warn # OPTIONNEL
    emailsTranslationsComponent: emails # REQUIRED
    emailsAssetsPublicUrl: *apiUrl # FIXE
    emailsAssetsBucket: assets # REQUIRED
    appLinkAppleStore: TODO # REQUIRED
    appLinkPlayStore: TODO # REQUIRED
    translationsEndpoint: TODO # REQUIRED
    translationsEndpointSuffix: TODO # OPTIONAL
    translationsToken: TODO # REQUIRED
    appUrl: *webappUrl # FIXE
    connectorUrl: TODO # OPTIONAL
    connectorToken TODO # OPTIONAL
    postgresConnectionLimit: TODO # OPTIONAL

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 80

  probes:
    readiness:
      initialDelaySeconds: 0
      periodSeconds: 10
      failureThreshold: 6
    liveness:
      initialDelaySeconds: 0
      periodSeconds: 5
      failureThreshold: 5

  ingress:
    enabled: true
    className: traefik
    annotations:
      kubernetes.io/ingress.class: "traefik"
      cert-manager.io/cluster-issuer: "letsencrypt"
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: *apiUrl
        paths: [/]
    tls:
      - hosts:
          - *apiUrl
############## API ##############

############## AUTH ##############
auth:
  name: auth # REQUIRED
  replicaCount: 1

  image:
    repository: "quay.io/keycloak/keycloak" # REQUIRED
    tag: "21.1" # REQUIRED
    pullPolicy: IfNotPresent

  initImage:
    repository: "rg.fr-par.scw.cloud/ulep/auth-prod" # REQUIRED
    tag: "latest" # REQUIRED


  env:
    keycloakAdmin: admin # FIXE
    keycloakAdminPassword: *keycloakAdminPassword # REQUIRED
    kcDB: postgres # FIXE
    kcDBSchema: keycloak # FIXE
    proxyAddressForwarding: true
    logLevel: INFO # REQUIRED


  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 80

  probes:
    startup:
      initialDelaySeconds: 10
      periodSeconds: 10
      failureThreshold: 12
    readiness:
      initialDelaySeconds: 0
      periodSeconds: 5
      failureThreshold: 10
    liveness:
      initialDelaySeconds: 0
      periodSeconds: 5
      failureThreshold: 5

  ingress:
    enabled: true
    className: traefik
    annotations:
      kubernetes.io/ingress.class: "traefik"
      cert-manager.io/cluster-issuer: "letsencrypt"
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: *keycloakUrl
        paths: [/]
    tls:
      - hosts:
          - *keycloakUrl
############## AUTH ##############

############## MINIO ##############
minio:
  global:
    storageClass: scw-bssd

  image:
    tag: 2023.9.30-debian-11-r0
  clientImage:
    tag: 2023.9.29-debian-11-r0

  auth:
    rootUser: *minioAccessKey
    rootPassword: *minioSecretKey

  persistence:
    size: 40Gi

  # Distributed  mode is recommended for PROD
  mode: distributed
  statefulset:
    replicaCount: 2
    drivesPerNode: 2

  ingress:
    enabled: true
    ingressClassName: traefik
    hostname: minio.ulep.thestaging.io
    path: /
    pathType: Prefix
    servicePort: 9001
    annotations:
      kubernetes.io/ingress.class: "traefik"
      cert-manager.io/cluster-issuer: "letsencrypt"
      kubernetes.io/tls-acme: "true"
    tls: true
    extraTls:
      - hosts:
         - minio.ulep.thestaging.io
        secretName: minio
  apiIngress:
    enabled: true
    ingressClassName: traefik
    hostname: minio-api.ulep.thestaging.io
    path: /
    pathType: Prefix
    servicePort: 9000
    annotations:
      kubernetes.io/ingress.class: "traefik"
      cert-manager.io/cluster-issuer: "letsencrypt"
      kubernetes.io/tls-acme: "true"
    tls: true
    extraTls:
      - hosts:
         - minio-api.ulep.thestaging.io
        secretName: minio-api
############## MINIO ##############

############## ADMIN ##############
admin:
  name: admin # REQUIRED
  replicaCount: 1

  image:
    repository: "rg.fr-par.scw.cloud/ulep/admin-prod" # REQUIRED
    tag: "latest" # REQUIRED
    pullPolicy: Always

  env:
    keycloakClientSecret: *keycloakClientSecret # REQUIRED

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 80

  probes:
    startup:
      initialDelaySeconds: 60
      periodSeconds: 30
      failureThreshold: 5
    readiness:
      initialDelaySeconds: 0
      periodSeconds: 10
      failureThreshold: 3
    liveness:
      initialDelaySeconds: 0
      periodSeconds: 5
      failureThreshold: 3

  ingress:
    enabled: true
    className: traefik
    annotations:
      kubernetes.io/ingress.class: "traefik"
      cert-manager.io/cluster-issuer: "letsencrypt"
      kubernetes.io/tls-acme: "true"

    hosts:
      - host: *adminUrl
        paths: [/]
    tls:
      - hosts:
          - *adminUrl
############## ADMIN ##############


############## WEBAPP ##############
webapp:
  name: "webapp"
  replicaCount: 1

  image:
    repository: nginx # REQUIRED
    tag: '1.25.2-alpine'  # REQUIRED
    pullPolicy: IfNotPresent # OPTIONNEL
  initImage:
    repository: "rg.fr-par.scw.cloud/ulep/webapp" # REQUIRED
    tag: "latest" # REQUIRED
    pullPolicy: IfNotPresent # OPTIONNEL

  env: {}

  pv:
    storage: 4Gi
    storageClassName: scw-bssd

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 80

  probes:
    startup:
      initialDelaySeconds: 30
      periodSeconds: 10
      failureThreshold: 15
    readiness:
      initialDelaySeconds: 0
      periodSeconds: 10
      failureThreshold: 3
    liveness:
      initialDelaySeconds: 0
      periodSeconds: 5
      failureThreshold: 3
  ingress:
    enabled: true
    className: traefik
    annotations:
      kubernetes.io/ingress.class: "traefik"
      cert-manager.io/cluster-issuer: "letsencrypt"
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: *webappUrl
        paths: [/]
    tls:
      - hosts:
          - *webappUrl
############## WEBAPP ##############

############## INIT SPEC ##############

serviceAccount:
  # Specifies whether a service account should be created
  create: true
  # Annotations to add to the service account
  annotations: {}
  # The name of the service account to use.
  # If not set and create is true, a name is generated using the fullname template
  name: ""

imagePullSecrets:
  - name: "registrypullsecret" # FIXE

nameOverride: ""
fullnameOverride: ""

podAnnotations: {}

podSecurityContext: {}
  # fsGroup: 2000

securityContext: {}
  # capabilities:
  #   drop:
  #   - ALL
  # readOnlyRootFilesystem: true
  # runAsNonRoot: true
  # runAsUser: 1000


resources: {}

nodeSelector: {}

tolerations: []

affinity: {}
