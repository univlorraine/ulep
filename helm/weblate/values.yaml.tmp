# Default values for etandem.
# This is a YAML-formatted file.
# Declare variables to be passed into your templates.

############## GLOBAL ##############

name: "etandem-weblate"
domain: ""
postgresDB: weblate
postgresUser: weblate
postgresPassword: ""

############## WEBLATE ##############
weblate:
  name: "weblate"
  replicaCount: 1

  image:
    repository: "weblate/weblate"
    tag: "4.18"
    pullPolicy: IfNotPresent

  env:
    siteDomain: # prefix.domain 
    serverEmail: 
    defaultFromEmail: 
    emailHost: #in-v3.mailjet.com
    adminEmail: 
    emailHostUser: # api key mailjet
    emailHostPassword:  # api secret mailjet
    emailPort: 587
    allowedHost: '*'
    adminPassword: 
  
  pv:
    storage: 5Gi # 5Gi recommandé
    volumeMode: Filesystem
    storageClassName: scw-bssd
    csi:
      enabled: true
      driver: csi.scaleway.com
      volumeHandle: fr-par-2/6922c455-e37d-40c4-8e6c-9fb3613e89a0
      key: topology.csi.scaleway.com/zone
      zone: fr-par-2

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 80

  resources: 
    limits:
      cpu: "3"
      memory: 4000Mi
    requests:
      cpu: "2"
      memory: 3000Mi


  ingress:
    enabled: true
    # className: ""
    annotations:
      kubernetes.io/ingress.class: nginx
      kubernetes.io/tls-acme: "true"
      cert-manager.io/issuer: "letsencrypt"
    hosts:
      - host: weblate
        paths: [/]
    # tls: 
    #   - secretName: etendem-weblate-tls
    #     hosts:
    #       - weblate
############## WEBLATE ##############


############## DATABASE ##############
database:
  name: "database"
  replicaCount: 1

  image:
    repository: "postgres"
    tag: "15.3-alpine"
    pullPolicy: IfNotPresent

  env: {}

  pv:
    storage: 5Gi # 5Gi recommandé
    volumeMode: Filesystem
    storageClassName: scw-bssd
    csi:
      enabled: true
      driver: csi.scaleway.com
      volumeHandle: fr-par-2/6922c455-e37d-40c4-8e6c-9fb3613e89a0
      key: topology.csi.scaleway.com/zone
      zone: fr-par-2

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 5432

  ingress:
    enabled: false
    # className: ""
    annotations: 
      kubernetes.io/ingress.class: nginx
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: database
        paths: [/]
    # tls: 
    #   - secretName: etendem-tls
    #     hosts:
    #       - database
############## DATABASE ##############

############## REDIS ##############
redis:
  name: "redis"
  replicaCount: 1

  image:
    repository: "redis"
    tag: "7.0"
    pullPolicy: IfNotPresent

  env: {}

  autoscaling:
    enabled: false
    minReplicas: 1
    maxReplicas: 100
    targetCPUUtilizationPercentage: 80
    # targetMemoryUtilizationPercentage: 80
  service:
    type: ClusterIP
    port: 6379

  ingress:
    enabled: false
    # className: ""
    annotations: 
      kubernetes.io/ingress.class: nginx
      kubernetes.io/tls-acme: "true"
    hosts:
      - host: database
        paths: [/]
    # tls: 
    #   - secretName: etendem-tls
    #     hosts:
    #       - database
############## DATABASE ##############

############## INIT SPEC ##############


serviceAccount:
  # Specifies whether a service account should be created
  create: true
  # Annotations to add to the service account
  annotations: {}
  # The name of the service account to use.
  # If not set and create is true, a name is generated using the fullname template
  name: ""

imagePullSecrets: []
nameOverride: ""
fullnameOverride: ""

podAnnotations: {}

podSecurityContext: {}
  # fsGroup: 2000

securityContext: {}

resources: {}

nodeSelector: {}

tolerations: 
  - key: "node.kubernetes.io/memory-pressure"
    operator: "Exists"
    effect: "NoSchedule"

affinity: {}
