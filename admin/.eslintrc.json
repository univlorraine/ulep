{
    "root": true,
    "extends": [
        "@thetribe/eslint-config-react-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "env": {
        "browser": true
    },
    "rules":{
        "no-useless-constructor": "off",
        "no-empty-function": "off"
    },
    "overrides": [
        {
            "files": ["**/*.test.{ts,tsx}"],
            "env": {
                "jest": true
            }
        }
    ]
}
