{
    "root": true,
    "extends": ["@thetribe/eslint-config-react-typescript", "plugin:react/recommended"],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "env": {
        "browser": true
    },
    "plugins": ["@typescript-eslint"],
    "rules": {
        "no-unused-vars": ["error", { "varsIgnorePattern": "React" }]
    },
    "settings": {
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".tsx"]
        }
    }
}
