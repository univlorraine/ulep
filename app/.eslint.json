{
    "root": true,
    "extends": ["@thetribe/eslint-config-react-typescript", "plugin:react/recommended", "plugin:cypress/recommended"],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "env": {
        "browser": true
    },
    "plugins": ["@typescript-eslint", "cypress"],
    "rules": {
        "no-useless-constructor": "off",
        "react/react-in-jsx-scope": "off"
    },
    "settings": {
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".tsx"]
        }
    }
}
