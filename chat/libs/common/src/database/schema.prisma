generator client {
  provider = "prisma-client-js"
  enableTracing = true
  //binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x","linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Conversation {
  id                String        @id @default(uuid()) @map("_id")
  createdAt         DateTime      @default(now())
  participantIds    String[]
  lastActivityAt    DateTime?
  metadata          Json          @default("{}")

  Messages          Message[]
  Hashtags          Hashtag[]
  @@map("conversations")
  @@index([participantIds])
}

model Message {
  id                    String       @id @default(uuid()) @map("_id")
  parentId              String?
  createdAt             DateTime     @default(now())
  conversationId        String
  content               String?
  isReported            Boolean      @default(false)
  isDeleted             Boolean      @default(false)
  ownerId               String
  type                  String       @default("text")
  updatedAt             DateTime     @updatedAt
  mediaObjectId         String?
  thumbnailId           String?
  metadata              Json         @default("{}")

  Conversation          Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  MediaObject           MediaObject?
  Thumbnail             Thumbnail?
  MessageLikes          MessageLike[] @relation("MessageLikes")
  Replies               Message[]    @relation("MessageReplies")
  ParentMessage         Message?     @relation("MessageReplies", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@map("messages")
  @@index([conversationId, createdAt])
  @@index([parentId])
  @@index([ownerId])
}

model MediaObject {
  id         String              @id @default(uuid()) @map("_id")
  name       String
  bucket     String
  mime       String
  size       Int
  created_at DateTime            @default(now())
  updated_at DateTime            @updatedAt
  messageId  String?             @unique

  Message   Message?             @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([name, bucket])
  @@map("media_objects")
}

model MessageLike {
  id         String              @id @default(uuid()) @map("_id")
  messageId  String              @unique
  userId     String

  Message   Message?             @relation("MessageLikes", fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([messageId, userId])
  @@map("message_likes")
}

model Thumbnail {
  id         String              @id @default(uuid()) @map("_id")
  name       String
  bucket     String
  mime       String
  size       Int
  created_at DateTime            @default(now())
  updated_at DateTime            @updatedAt
  messageId  String?             @unique

  Message   Message?             @relation(fields: [messageId], references: [id], onDelete: Cascade)

  @@unique([name, bucket])
  @@map("thumbnails")
}

model Hashtag {
  id         String              @id @default(uuid()) @map("_id")
  name       String
  created_at DateTime            @default(now())
  updated_at DateTime            @updatedAt
  conversationId String

  Conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@map("hashtags")
}
