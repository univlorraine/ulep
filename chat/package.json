{
    "name": "chat",
    "version": "0.34.0",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"libs/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "generate": "pnpm dlx prisma@6.11.1 generate",
        "migrate": "pnpm dlx prisma@6.11.1 db push",
        "seed": "pnpm dlx prisma@6.11.1 db seed -- --delete",
        "seed:full": "pnpm dlx prisma@6.11.1 db seed -- --delete --seed=full --conversations=2000 --messages=10 --hashtags=5",
        "seed:minimal": "pnpm dlx prisma@6.11.1 db seed -- --delete --seed=minimal --conversations=100 --messages=3 --hashtags=2",
        "seed:custom": "pnpm dlx prisma@6.11.1 db seed -- --delete --conversations=1000 --messages=5 --hashtags=3",
        "reset-last-activity": "ts-node scripts/reset-last-activity-conversations.ts"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.658.0",
        "@aws-sdk/s3-request-presigner": "^3.658.0",
        "@nestjs/common": "^9.4.3",
        "@nestjs/config": "^2.3.4",
        "@nestjs/core": "^9.4.3",
        "@nestjs/platform-express": "^9.4.3",
        "@nestjs/platform-socket.io": "^9.4.3",
        "@nestjs/swagger": "^6.3.0",
        "@nestjs/terminus": "^10.2.3",
        "@nestjs/websockets": "^9.4.3",
        "@prisma/client": "^6.11.1",
        "@sentry/node": "^8.32.0",
        "@socket.io/redis-adapter": "^8.3.0",
        "archiver": "^7.0.1",
        "axios": "^1.7.7",
        "date-fns": "^4.1.0",
        "jsonwebtoken": "^9.0.2",
        "open-graph-scraper": "^6.8.2",
        "openid-client": "^5.7.0",
        "prisma": "^6.11.1",
        "redis": "^4.7.0",
        "rxjs": "^7.8.1",
        "sharp": "^0.33.5",
        "socket.io": "^4.8.0",
        "source-map-support": "^0.5.21",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@nestjs/cli": "^9.5.0",
        "@nestjs/schematics": "^9.2.0",
        "@nestjs/testing": "^9.4.3",
        "@types/archiver": "^6.0.3",
        "@types/express": "^4.17.21",
        "@types/jest": "29.5.0",
        "@types/multer": "^1.4.12",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "29.5.0",
        "prettier": "^2.8.8",
        "supertest": "^6.3.4",
        "ts-jest": "29.0.5",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "4.2.0",
        "typescript": "^4.9.5"
    },
    "pnpm": {
        "supportedArchitectures": {
            "os": [
                "current",
                "linux"
            ],
            "cpu": [
                "x64",
                "arm64"
            ]
        }
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.(test|spec)\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/test/",
            "<rootDir>/libs/"
        ],
        "moduleNameMapper": {
            "^@app/keycloak(|/.*)$": "<rootDir>/libs/keycloak/src/$1",
            "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
            "^src(|/.*)$": "<rootDir>/src/$1"
        }
    },
    "prisma": {
        "schema": "libs/common/src/database/schema.prisma",
        "seed": "ts-node libs/common/src/database/seeds/index.ts"
    },
    "packageManager": "pnpm@10.7.0"
}
