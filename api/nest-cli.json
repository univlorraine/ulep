{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "assets": [
      { "include": "i18n/**/*", "outDir": "dist/i18n", "watchAssets": true },
      {
        "include": "templates/*",
        "outDir": "dist/templates",
        "watchAssets": true
      }
    ]
  },
  "projects": {
    "keycloak": {
      "type": "library",
      "root": "libs/keycloak",
      "entryFile": "index",
      "sourceRoot": "libs/keycloak/src",
      "compilerOptions": {
        "tsConfigPath": "libs/keycloak/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}
